{
  "name": "dotnet-monitor-vscode",
  "displayName": "Dotnet Monitor",
  "description": "Monitor and analyze .NET application performance in real-time with an integrated dashboard",
  "version": "0.0.6",
  "publisher": "nmovellan",
  "author": {
    "name": "Jose Ignacio Movellan"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimovellan/dotnet-monitor-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/jimovellan/dotnet-monitor-vscode/issues"
  },
  "homepage": "https://github.com/jimovellan/dotnet-monitor-vscode#readme",
  "keywords": [
    "dotnet",
    "monitor",
    "performance",
    "metrics",
    "diagnostics",
    "csharp",
    "profiling",
    "memory",
    "dashboard"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnetMonitor.showDashboard",
        "title": "Mostrar Dashboard Dotnet Monitor"
      }
    ],
    "configuration": {
      "title": "Dotnet Monitor",
      "properties": {
        "dotnetMonitor.port": {
          "type": "number",
          "default": 52323,
          "description": "Puerto HTTPS donde dotnet-monitor expone la API",
          "minimum": 1,
          "maximum": 65535
        },
        "dotnetMonitor.httpPort": {
          "type": "number",
          "default": 52325,
          "description": "Puerto HTTP alternativo de dotnet-monitor",
          "minimum": 1,
          "maximum": 65535
        },
        "dotnetMonitor.autoReconnect": {
          "type": "boolean",
          "default": true,
          "description": "Reconectar automáticamente si el stream de métricas se desconecta"
        },
        "dotnetMonitor.reconnectDelay": {
          "type": "number",
          "default": 2000,
          "description": "Tiempo en milisegundos antes de intentar reconectar",
          "minimum": 500,
          "maximum": 30000
        },
        "dotnetMonitor.maxDataPoints": {
          "type": "number",
          "default": 30,
          "description": "Número máximo de puntos a mostrar en los gráficos",
          "minimum": 10,
          "maximum": 100
        },
        "dotnetMonitor.commandArgs": {
          "type": "array",
          "default": [
            "collect",
            "--no-auth"
          ],
          "description": "Argumentos para ejecutar dotnet-monitor",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-webview",
    "copy-webview": "mkdir -p out/webview/components out/webview/pages && cp src/webview/*.js out/webview/ 2>/dev/null || true && cp src/webview/*.css out/webview/ 2>/dev/null || true && cp src/webview/components/*.js out/webview/components/ 2>/dev/null || true && cp src/webview/pages/*.js out/webview/pages/ 2>/dev/null || true",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.39.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "vue": "^3.5.24"
  }
}
